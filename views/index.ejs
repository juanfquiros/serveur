<%- include('partials/header') %>

<main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
    <h1 class="content-title">Les actualités du blog</h1>
    <div class="pure-g">

        <%# Pour chaque article dans notre liste d'articles, on va générer le code HTML suivant %>
        <% for (const article of articles) { %>
            <article class="card pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
                <header>
                    <img class="card-img pure-img" src="images/<%= article.img %>" alt="<%= article.img_alt %>">
                    <h2><%= article.title %></h2>
                    <div class="card-meta">
                        Par <a href="#"><%= article.author %></a>
                        dans la catégorie <a href="#"><%= article.category %></a>
                    </div>
                </header>
                <p><%= article.text %></p>

                <%# On utilise l'id qui se trouve dans article.id pour générer le bon lien %>
                <a class="card-action pure-button" href="/article/<%= article.id %>">
                    Lire l'article
                </a>
            </article>
        <% } %>

    </div>
</main>

<%- include('partials/footer') %>
